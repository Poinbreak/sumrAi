{
  "manifest_version": 3,
  "name": "Gemini Summarizer",
  "version": "1.0",
  "permissions": [
    "sidePanel",
    "contextMenus",
    "storage",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Open Summarizer"
  }
}